<%# Alerte email bien envoyé %>
<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<%# Banner avec image %>
<div class="banner position-relative" data-controller="scroll">
  <%= image_tag "banner.webp", class: "img-fluid w-100" %>
</div>

